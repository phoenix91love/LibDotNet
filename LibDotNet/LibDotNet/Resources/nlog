<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <targets>
    <!-- Console có màu -->
    <target name="coloredConsole" xsi:type="ColoredConsole"
            layout="${date:format=HH\:mm\:ss} | ${logger} | ${level:uppercase=true} | ${message}">
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
    </target>

    <!-- File log cho từng logger - tự động chia theo ngày và dung lượng -->
    <target name="logfile" xsi:type="File"
            fileName="logs/${logger}-${date:format=yyyy-MM-dd}.${hash}.log"
            layout="${longdate} | ${level:uppercase=true} | ${message}"
            archiveAboveSize="10485760" <!-- 10MB -->
            maxArchiveFiles="10"
            keepFileOpen="false"
            concurrentWrites="true" />

  </targets>

  <rules>
    <!-- Ghi tất cả log ra console -->
    <logger name="*" minlevel="Info" writeTo="coloredConsole" />
    
    <!-- Ghi vào file với format riêng cho từng logger -->
    <logger name="*" minlevel="Debug" writeTo="logfile" />
  </rules>
</nlog>